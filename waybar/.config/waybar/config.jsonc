// REF: https://github.com/Alexays/Waybar/blob/master/resources/config.jsonc
// REF: https://github.com/mylinuxforwork/dotfiles/tree/main/share/dotfiles/.config/waybar/themes/ml4w

{
    "layer": "top",
    "margin-bottom": 0,
    "spacing": 0,

    "include": [
        "~/.config/waybar/modules.jsonc"
    ],

    "modules-left": [
        "hyprland/workspaces",
        "hyprland/window",
        "custom/empty"
    ],

    "modules-center": [
        "clock"
    ],

    "modules-right": [
        "tray",
        "idle_inhibitor",
        "pulseaudio",
        "temperature",
        "battery",
        "custom/exit"
    ]
  }
}
